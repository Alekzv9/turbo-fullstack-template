{
  "extends": "@my-app/config/tsconfig/base.json",
  "compilerOptions": {
    "outDir": "dist",
    // This is the crucial addition. It tells TypeScript to load
    // the global types for the Node.js environment.
    "types": ["node"],
    // Tells tsc to generate .d.ts files
    "declaration": true,
    // Generates .d.ts.map files for go-to-definition support
    "declarationMap": true,
    // Ensures tsc only emits type files, not JS files (tsup handles that)
    "emitDeclarationOnly": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
