{
  "extends": "@my-app/config/tsconfig/base.json",
  "compilerOptions": {
    "outDir": "dist",
    "types": ["node"],
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,
    "module": "ES2022",
    "moduleResolution": "node",
    "noEmit": false,
    "allowImportingTsExtensions": false
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "generated/**/*"]
}
